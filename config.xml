<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.nicardia" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Nicardia</name>
    <description>
       Nicardia application that responds to the deviceready event.
    </description>
    <icon src="icon.png" />
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <platform name="android">
    
    <preference name="EnableViewportScale" value="true"/>
    <preference name="MediaPlaybackRequiresUserAction" value="true"/>
    <preference name="orientation" value="landscape" />
    <preference name="android-build-tool" value="ant|gradle" />
    <preference name="android-minSdkVersion" value="17" />
    <preference name="android-maxSdkVersion" value="16" />
    <preference name="android-targetSdkVersion" value="17" />
    <preference name="android-installLocation" value="internalonly" />
    <preference name="android-windowSoftInputMode" value="stateVisible|adjustResize" />
    <allow-intent href="market:*" />
    </platform>
   <engines>
    <engine name="cordova" version=">=1.7.0" />
    <engine name="cordova" version=">=1.8.1" />
</engines>
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
</widget>
